{
    "name": "drupalcommerce/project-base",
    "description": "Commerce 2.x project template",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Matt Glaman",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/drupalcommerce/commerce_base"
        }
    ],
    "require": {
        "ext-curl": "*",
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "cweagans/composer-patches": "^1.0",
        "drush/drush": "^8.1",
        "drupal/core": "^8.2",
        "drupal/console": "~0.10",
        "drupal/commerce": "2.x-dev",
        "drupal/commerce_migrate": "2.x-dev",
        "drupalcommerce/commerce_base": "dev-8.x-1.x",
        "drupal/migrate_tools": "3.x-dev",
        "drupal/migrate_upgrade": "3.x-dev",
        "phing/phing": "^2.14",
        "drupal/admin_toolbar": "^1.19",
        "drupal/swiftmailer": "^1.0@beta"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
         "classmap": [
             "scripts/composer/ScriptHandler.php"
         ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
             "DrupalProject\\composer\\ScriptHandler::buildScaffold",
             "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
         ],
         "post-update-cmd": [
             "DrupalProject\\composer\\ScriptHandler::buildScaffold",
             "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
         ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    }
}
